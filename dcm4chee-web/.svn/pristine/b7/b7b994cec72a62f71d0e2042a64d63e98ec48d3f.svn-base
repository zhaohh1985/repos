<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>${db}</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>dcm4chee-web-${version}-${db}</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main</directory>
      <outputDirectory/>
      <includes>
        <include>*.txt</include>
        <include>bin/*.bat</include>
       </includes>
       <lineEnding>crlf</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/main</directory>
      <outputDirectory/>
      <includes>
        <include>bin/*.sh</include>
      </includes>
      <lineEnding>lf</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
	  <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>server/default/lib</outputDirectory>
      <includes>
        <include>dcm4che.dcm4chee:dcm4chee-web-urlprovider</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-licenseprovider</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>server/default/deploy</outputDirectory>
      <includes>
        <include>dcm4che.dcm4chee:dcm4chee-web-ear:ear:${db}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>server/default/conf/auditlog</outputDirectory>
      <outputFileNameMapping>web3-dashboard-xmbean.xml</outputFileNameMapping>
      <includes>
        <include>dcm4che.dcm4chee:dcm4chee-dashboard-sar-auditlog:xml:config-xmbean</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>server/default/conf/auditlog</outputDirectory>
      <includes>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:bridgestore-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:contentedit-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:echo-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:hl7send-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:ianscu-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:attrmod-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:movescu-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:mwlscu-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:rejnotescu-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:tlscfg-xmbean</include>
        <include>dcm4che.dcm4chee:dcm4chee-web-sar-auditlog:xml:webcfg-xmbean</include>
      </includes>
    </dependencySet>
    <dependencySet>
	  <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>cleanup</outputDirectory>
      <includes>
        <include>dcm4che.dcm4chee:dcm4chee-cleanup-ear:ear:${db}</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
