<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	 version="2.4">
	<display-name>dcm4chee-web</display-name>
	<filter>
		<filter-name>wicket.dcm4chee-web</filter-name>
 		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>org.dcm4chee.web.war.WicketApplication</param-value>
 		</init-param>
		<init-param>
			<param-name>configuration</param-name>
			<param-value>deployment</param-value>
 		</init-param>
        <!-- List of languages for language selection separated by ',' or ANY for all supported languages.
             A leading '*' marks the (global) default language instead of language of current session. 
             e.g. 'en,*de,ja'
        -->
        <init-param>
          <param-name>Languages</param-name>
          <param-value>en,en_GB,de,fr</param-value>
        </init-param>
	    <init-param>
	      <param-name>WebCfgServiceName</param-name>
	      <param-value>dcm4chee.web:service=WebConfig</param-value>
	    </init-param>
	    <init-param>
	      <param-name>DashboardServiceName</param-name>
	      <param-value>dcm4chee.web:service=DashboardService</param-value>
	    </init-param>
		<init-param>
	      <param-name>UserAccessServiceName</param-name>
	      <param-value>dcm4chee.usr:service=UserAccessService</param-value>
	    </init-param>
        <init-param>
			<param-name>DicomSecurityService</param-name>
			<param-value>dcm4chee.archive:service=DicomSecurity</param-value>
 		</init-param>
	    <init-param>
	      <param-name>internalErrorPageClass</param-name>
	      <param-value>org.dcm4chee.web.common.base.InternalErrorPage</param-value>
	    </init-param> 
	    <init-param>
	      <param-name>pageExpiredPageClass</param-name>
	      <param-value>org.dcm4chee.web.war.MainPage</param-value>
	    </init-param>
        <init-param>
          <param-name>PagemapTimeout</param-name>
          <param-value>5</param-value>
        </init-param>
        <init-param>
          <param-name>LoginAllowedRolename</param-name>
          <param-value>LoginAllowed</param-value>
        </init-param>
        <init-param>
          <param-name>StudyPermissionsAllRolename</param-name>
          <param-value>StudyPermissionsAll</param-value>
        </init-param>
        <init-param>
          <param-name>StudyPermissionsOwnRolename</param-name>
          <param-value>StudyPermissionsOwn</param-value>
        </init-param>
        <init-param>
          <param-name>StudyPermissionsPropagationRolename</param-name>
          <param-value>StudyPermissionsPropagation</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>wicket.dcm4chee-web</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	<context-param>
        <param-name>configuration</param-name>
		<param-value>deployment</param-value>
		<!-- <param-value>development</param-value> -->
	</context-param>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Static resources for form based login</web-resource-name>
            <url-pattern>/resources/org.dcm4chee.web.common.login.LoginPage/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Static resources for form based login</web-resource-name>
            <url-pattern>/resources/org.dcm4chee.web.common.base.BaseWicketPage/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected resources for web application</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>dcm4chee</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login.jsp?loginFailed=true</form-error-page>
        </form-login-config>
    </login-config>
    <!--
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>dcm4chee</realm-name>
    </login-config>
    -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
</web-app>
